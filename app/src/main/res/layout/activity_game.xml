<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

  <ImageView
      android:id="@+id/pet_imdwdage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.111"
      app:srcCompat="@drawable/_experience_the_adorable_world_of_cute_animated_dogs_" />

  <Button
      android:id="@+id/feedButton"
      android:layout_width="160dp"
      android:layout_height="90dp"
      android:text="Feed"
      android:textColorHighlight="#A64D4D"
      android:textColorLink="#000000"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.088"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/pet_imdwdage"
      app:layout_constraintVertical_bias="0.173" />

  <Button
      android:id="@+id/cleanButton"
      android:layout_width="160dp"
      android:layout_height="90dp"
      android:text="Clean"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/pet_imdwdage"
      app:layout_constraintVertical_bias="0.169" />

  <Button
      android:id="@+id/playButton"
      android:layout_width="160dp"
      android:layout_height="90dp"
      android:text="Play"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.916"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/pet_imdwdage"
      app:layout_constraintVertical_bias="0.172" />

  <TextView
      android:id="@+id/hungerTextView"
      android:layout_width="218dp"
      android:layout_height="66dp"
      android:text="Hunger"
      android:textAlignment="center"
      android:textSize="34sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.096"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.672" />

  <TextView
      android:id="@+id/cleanlinessTextView"
      android:layout_width="218dp"
      android:layout_height="70dp"
      android:text="Clean"
      android:textAlignment="center"
      android:textSize="34sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.094"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/hungerTextView"
      app:layout_constraintVertical_bias="0.172" />

  <TextView
      android:id="@+id/happyTextView"
      android:layout_width="216dp"
      android:layout_height="72dp"
      android:text="Happy"
      android:textAlignment="center"
      android:textSize="34sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.097"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cleanlinessTextView"
      app:layout_constraintVertical_bias="0.304" />

  <TextView
      android:id="@+id/messageTextView"
      android:layout_width="687dp"
      android:layout_height="94dp"
      android:text="Message"
      android:textAlignment="center"
      android:textSize="34sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/playButton"
      app:layout_constraintHorizontal_bias="0.463"
      app:layout_constraintStart_toEndOf="@+id/feedButton"
      app:layout_constraintTop_toBottomOf="@+id/cleanButton"
      app:layout_constraintVertical_bias="0.922" />

</androidx.constraintlayout.widget.ConstraintLayout>